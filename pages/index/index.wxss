/**index.wxss**/
.index .slide-image{
  width: 710rpx;
  height: 350rpx;
}
.content-item{
  margin-top: 50rpx;
  /* border-bottom: 1px solid #888; */
}
.content-item .title{
  font-size: 16px;
  padding-left: 20rpx;
  border-left: 2px solid #000;
  line-height: 32rpx;
  height: 32rpx;
}
.content-item .content{
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx
}
.content .box-l .img{
  width: 230rpx;
  height: 300rpx;
}
.box-r .book-title{
  font-size: 16px;
  color: #333;
}
.box-r{
  margin-left: 30rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.box-r .book-desc{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  margin-top: 20rpx;
  line-height: 1.5;
  font-size: 14px;
  color: #444;
}
.box-r .author{
   font-size: 12px;
   display: flex;
   justify-content: space-between;
}
.loadmore {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: #555;
}

.loadmore image {
  width: 50rpx;
  height: 50rpx;
}

.loadmore text {
  line-height: 50rpx;
  height: 50rpx;
  padding-left: 20rpx;
}

.no-more {
  position: relative;
  line-height: 160rpx;
  height: 160rpx;
  text-align: center;
  background: #f1f1f1;
  font-size: 14px;
  color: #9e9e9e;
}

.no-more text {
  position: relative;
  z-index: 998;
  padding: 0 20rpx;
  background: #f1f1f1;
}

.no-more .line {
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 0;
  transform: translate(-50%, -50%);
  width: 500rpx;
  height: 1rpx;
  background: #ccc;
}